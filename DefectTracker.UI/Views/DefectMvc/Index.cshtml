@model IEnumerable<DefectTracker.Models.Defect>

@{
    ViewBag.Title = "Index";
}

<h2>Defect List</h2>
<br />
<p>
    @Html.ActionLink("Create New", "CreateAsync")
</p>
@if (TempData["Message"] != null)
{
    <p id="">
        @TempData["Message"].ToString()
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DefectTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DefectDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResolutionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserAssigned.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.Status)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DefectTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefectDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResolutionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAssigned.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditAsync", new { id = item.Id }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>